SHELL     = /bin/bash
CPP       = g++ -std=c++0x -Wno-deprecated
CPPFLAGS  = -framework OpenGL -framework GLUT
BIN       = illustrator
OBJECTS   = illustrator.cpp
LIBRARIES = 

#⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌MAIN⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌⚌


all : $(OBJECTS) $(LIBRARIES)
	$(CPP) $(OBJECTS) -o "$(BIN)" $(CPPFLAGS)

compile : 
	$(CPP) -std=c++0x -Wno-deprecated "illustrator.cpp" -o "$(BIN)" $(CPPFLAGS)

run : 
	./"$(BIN)"

remake : 
	cd "/Users/Admin/apps/_src/Perl/LargeProjects/makegen"&& \
	perl "_make_gen.pl" "/Users/Admin/apps/_src/C++/SmallProjects/_Graphics/illustrator" "illustrator.cpp" "illustrator"&& \
	cd --

open : 
	vim -p *.hpp

